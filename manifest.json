{
    "manifest_version": 3,
    "name": "Blog Tracker",
    "version": "1.0",
    "description": "Track and rate blogs and essays you read",
    "permissions": ["storage", "activeTab", "tabs"],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background/background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }